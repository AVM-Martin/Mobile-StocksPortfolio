<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeActivity"
    android:layout_marginTop="20dp"
    android:id="@+id/activityHome"
    >

    <TextView
        android:id="@+id/tvTotalBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="5dp"
        android:text="Total Buy (Overall)"
        android:textSize="14dp"
        android:width="130dp"
        />

    <TextView
        android:id="@+id/tvTotalBuySeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
        android:text=": Rp"
        android:layout_toRightOf="@id/tvTotalBuy"
        />

    <TextView
        android:id="@+id/tvTotalBuyValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="125dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
        android:text="1.101.010.315.995,28"
        android:layout_toRightOf="@id/tvTotalBuy"
        android:width="200dp"
        android:gravity="right"
        />


    <TextView
        android:id="@+id/tvTotalSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Total Sell (Overall)"
        android:textSize="14dp"
        android:layout_below="@id/tvTotalBuy"
        android:width="130dp"
        />

    <TextView
        android:id="@+id/tvTotalSellSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
        android:text=": Rp"
        android:layout_below="@id/tvTotalBuySeparator"
        android:layout_toRightOf="@id/tvTotalSell"
        />

    <TextView
        android:id="@+id/tvTotalSellValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:text="1.101.112.886.423,90"
        android:textSize="14dp"
        android:layout_toRightOf="@id/tvTotalBuy"
        android:layout_below="@id/tvTotalBuyValue"
        android:width="200dp"
        android:gravity="right"
        />

    <TextView
        android:id="@+id/tvTotalProfit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Total Profit (Overall)"
        android:textSize="14dp"
        android:layout_below="@id/tvTotalSell"
        android:width="130dp"
        />

    <TextView
        android:id="@+id/tvTotalProfitSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
        android:text=": Rp"
        android:layout_below="@id/tvTotalSellSeparator"
        android:layout_toRightOf="@id/tvTotalProfit"
        />

    <TextView
        android:id="@+id/tvTotalProfitValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:textSize="14dp"
        android:text="102.570.428.62"
        android:layout_toRightOf="@id/tvTotalProfit"
        android:layout_below="@id/tvTotalSellSeparator"
        android:width="200dp"
        android:gravity="right"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_alignParentBottom = "true"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_navbar_menu"
        />


</RelativeLayout>
