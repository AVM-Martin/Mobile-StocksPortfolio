<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddPortfolio"
    android:layout_marginTop="120dp">

    <RelativeLayout
        android:id="@+id/layoutAdd"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        >

        <ImageButton
            android:id="@+id/imgBtnAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_add"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnAdd"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:layout_below="@+id/imgBtnAdd"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutEdit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/layoutAdd">

        <ImageButton
            android:id="@+id/imgBtnEdit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_edit"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnEdit"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Transaction"
            android:layout_below="@+id/imgBtnEdit"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDelete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="60dp"
        android:layout_toRightOf="@id/layoutEdit">

        <ImageButton
            android:id="@+id/imgBtnDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_delete"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnDelete"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Transaction"
            android:layout_below="@+id/imgBtnDelete"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutAdd1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/layoutAdd"
        >

        <ImageButton
            android:id="@+id/imgBtnAdd1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_add"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnAdd1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Transaction"
            android:layout_below="@+id/imgBtnAdd1"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutEdit1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/layoutAdd"
        android:layout_below="@id/layoutEdit">

        <ImageButton
            android:id="@+id/imgBtnEdit1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_edit"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnEdit1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Transaction"
            android:layout_below="@+id/imgBtnEdit1"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutDelete1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/layoutEdit"
        android:layout_below="@id/layoutDelete">

        <ImageButton
            android:id="@+id/imgBtnDelete1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_delete"
            android:maxWidth="10dp"
            android:maxHeight="10dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvImgBtnDelete1"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Transaction"
            android:layout_below="@+id/imgBtnDelete1"
            android:textAlignment="center"
            android:textSize="9dp"
            />
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_alignParentBottom = "true"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/bottom_navbar_menu"
        />

</RelativeLayout>
